(defwindow bar-center
    :exclusive true
    :monitor 0
    ;; :windowtype "dock"
    :stacking "bg"
    :focusable false
    :geometry (geometry :x "5px"
                        :y "5px"
                        :width "0"
                        :height "30px"
                        :anchor "top center")
"")

(defwindow bar-left
    :exclusive true
    :monitor 0
    :stacking "bg"
    :focusable false
    :geometry (geometry :x "5px"
                        :y "-25px"
                        :width "1px"
                        :height "30px"
                        :anchor "top left")
(left))

(defwindow bar-right
    :exclusive true
    :monitor 0
    :stacking "bg"
    :focusable false
    :geometry (geometry :x "5px"
                        :y "-25px"
                        :width "180px"
                        :height "30px"
                        :anchor "top right")
(right))

(defpoll time :interval "1s" :initial "" `date +%-I:%M' '%p`)
(defpoll battery :interval "2s" :initial "" `~/.config/eww/scripts/battery.py`)
(deflisten workspaces :initial "" `~/.config/eww/scripts/workspace.py 0`)

(defwidget left []
  (box
    :halign "start"
    "ïŒ“  "
    "${workspaces}"
  )
)

(defwidget right []
  (box
    {battery == "" ? "" : "${battery}"}
    " |  ${time}"
))

